package com.MultiThreading.Basic.JoinThreadDemo;

public class Main {
    public static void main(String[] args) {

        System.out.println("Main thread execution started");

        SharedResource sharedResource = new SharedResource();

        Thread thread1 = new Thread(()->{

            sharedResource.produce();
        }, "Thread-1");

        Thread thread2 = new Thread(()->{

            sharedResource.produce();
        }, "Thread-2");

        thread1.start();
        try{
            thread1.join();
        }
        catch (Exception e){

        }

        // thread 2 will only start after thread 1 is completed because of join
        thread2.start();
        try{

        thread2.join();
        }
        catch (Exception e){
            
        }

        System.out.println("Main thread execution ended");
    }
}
